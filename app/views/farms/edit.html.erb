<h2>Edit a Farm</h2>

<%= form_for @farm, url: farm_path, method: :patch do |f| %>
	
		<%= render 'form', f: f %>
	
	<h3>Edit Areas:</h3>
	<%= f.fields_for :areas, url: area_path, method: :patch do |area| %>
	
		<%= render 'area_fields', area: area %>
	
	<% end %>

	<%= f.submit %><br><br>
<% end %>

<%= link_to 'Back to Farm', farm_path %><br><br>