<% if @farm.errors.any? %>
	  <div id="error_explanation">
	    <h2>
	      <%= pluralize(@farm.errors.count, "error") %>
	      prohibited this farm from being saved:
	    </h2>
	 
	    <ul>
	    <% @farm.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %><br>

<h2>Create a New Farm</h2>

<%= form_for @farm do |f| %>
	
		<%= render 'form', f: f %>

	<h3>Create New Areas:</h3>

	<%= f.fields_for :areas do |area| %>

		<%= render 'area_fields', area: area %>

	<% end %>

	<%= f.submit %>
<% end %><br><br>
<%= link_to 'Farms', farms_path %><br><br>