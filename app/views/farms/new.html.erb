<h2>Create a New Farm</h2>

<%= form_for @farm do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %><br>
	<%#= f.hidden_field :user_id, :value => current_user.id %>
	<h3>Create a New Area:</h3>
	<%= f.fields_for :areas do |area| %>
		<%= area.label :name %>
		<%= area.text_field :name %><br>
		
		<%= area.label :area_type %>
		<%= area.text_field :area_type %><br>

		<%# need farm_id %>
	<% end %>

	<%= f.submit %>
<% end %>