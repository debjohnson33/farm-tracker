<%= @farm.name %><br>
<ul>
	<% @farm.areas.each do |area| %>
		<li>Animal Area: <%= link_to area.name, area_path %></li>		
		<li>Area Type: <%= area.area_type %></li>
		<li>Area Capacity: <%= area.capacity %></li>
		<li>Area Quantity: <%= area.quantity %></li><br>
	<% end %>
</ul>

<%= link_to "Add Animal", new_farm_animal_path(@farm.id) %><br><br>
<%= link_to 'Farms', farms_path %><br><br>
<%= link_to 'Edit Farm', edit_farm_path(@farm) %><br><br>
<%= link_to 'Delete Farm', farm_path(@farm), method: :delete %>


	