<h2>Your Animal:</h2>

<h3><%= @animal.name %></h3>
	Age: <%= @animal.age %><br>
	Sex: <%= @animal.sex %><br>
	Color: <%= @animal.color %><br>
	Weight: <%= @animal.weight %><br>
	Type: <%= @animal.animal_type %><br>
	Pregnant?: <%= @animal.pregnant %><br>
	<% if @animal.pregnant == true %>
		Date bred: <%= @animal.date_bred.strftime("%b %d, %Y") %><br>
		Estimated due date: <%= @animal.estimated_due_date.strftime("%b %d, %Y") %><br>
	<% end %>
	<%# if @animal.large %>
	<!--	<h3>Large <%#= @animal.type %></h3>
	<%# end %> -->
	Area: <%= @animal.area.name %><br><br>

	<%= link_to 'Back to Farm', farm_path(@animal.area.farm) %><br><br>
	<%= link_to 'Edit Animal', edit_animal_path(@animal) %><br><br>
	<%= link_to 'Delete Animal', animal_path(@animal), method: :delete, data: { confirm: 'Are you sure?'} %>